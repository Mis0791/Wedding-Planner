@model WeddingPlanner.Models.WeddingViewModel
@{
    ViewData["Title"] = "Wedding Planner";
}
<a href="/dashboard">Dashboard</a> || <a href="/logout">Logout</a>
<br>

<h1>Plan Your Wedding</h1>
<br>
<div>
    <form action="create" method="POST">
        <label asp-for="Wedder1"></label>
        <input asp-for="Wedder1"/>
        <span asp-validation-for="Wedder1"></span>
        <br>
        <br>

        <label asp-for="Wedder2"></label>
        <input asp-for="Wedder2"/>
        <span asp-validation-for="Wedder2"></span>
        <br>
        <br>

        <label asp-for="Date"></label>
        <input asp-for="Date" type="date"/>
        <span asp-validation-for="Date"></span>
        <br>
        <br>

        <label asp-for="Address"></label>
        <input asp-for="Address"/><br>
        <span asp-validation-for="Address"></span>
        <br>
        <br>

        <input type="submit" value="Create"/>
    </form>
</div>